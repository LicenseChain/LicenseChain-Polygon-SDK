{
  "name": "@licensechain/polygon-sdk",
  "version": "1.0.0",
  "description": "High-performance Layer 2 integration for LicenseChain - Deploy, manage, and verify software licenses on Polygon with ultra-low fees and fast transactions.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "contracts/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "deploy:mumbai": "ts-node scripts/deploy-mumbai.ts",
    "deploy:mainnet": "ts-node scripts/deploy-mainnet.ts",
    "bridge:ethereum": "ts-node scripts/bridge-ethereum.ts"
  },
  "keywords": [
    "polygon",
    "layer2",
    "ethereum",
    "blockchain",
    "smart-contracts",
    "nft",
    "license",
    "software-licensing",
    "web3",
    "defi",
    "erc721",
    "erc1155",
    "solidity",
    "typescript"
  ],
  "author": "LicenseChain Team <team@licensechain.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LicenseChain/LicenseChain-Polygon-SDK.git"
  },
  "bugs": {
    "url": "https://github.com/LicenseChain/LicenseChain-Polygon-SDK/issues"
  },
  "homepage": "https://github.com/LicenseChain/LicenseChain-Polygon-SDK#readme",
  "dependencies": {
    "ethers": "^6.8.0",
    "web3": "^4.2.0",
    "@openzeppelin/contracts": "^4.9.3",
    "axios": "^1.5.0",
    "bn.js": "^5.2.1",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "ethers": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
